{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "react",
    "types": [
      "mocha",
      "chai-as-promised",
//      "react",
//      "react-dom",
      "jquery"
    ],
    "rootDir": "src",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "include": [
    "./src/**/*"
  ]
}